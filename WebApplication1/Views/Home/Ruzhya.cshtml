@using WebApplication1.Domain.Core
@using WebApplication1.Models
@using WebApplication1.Helpers
@model IndexView

@{
    Layout = "~/Views/Shared/_Product.cshtml";
    ViewBag.Title = "Ружья";
}

<div class="bread">
    <nav class="breadcrumb">
        @Html.ActionLink("Главная", "Index", "Home", new { area = "" }, new { @class = "breadcrumb-item" })
        @Html.ActionLink("Каталог товаров", "Catalog", "Home", new { area = "" }, new { @class = "breadcrumb-item" })
        <span class="breadcrumb-item active">Ружья</span>
    </nav>
</div>
<div class="razdel">
    <h3>Ружья</h3>
</div>

<div class="row">
    <div class="tabloid-item col-xl-3 col-lg-4 col-md-6 col-sm-6">
        <a class="picture" href="@Url.Action("List", "Pneumatic", null)">
            <img src="~/Images/pnevmatika.jpg" />
        </a>
        <a class="name text-center" href="@Url.Action("List", "Pneumatic", null)"><span class="middle">Пневматика</span></a>
    </div>
    <div class="tabloid-item col-xl-3 col-lg-4 col-md-6 col-sm-6">
        <a class="picture" href="@Url.Action("Arbalet", "Arbalet", null)">
            <img src="~/Images/arbalety.gif" />
        </a>
        <a class="name text-center" href="@Url.Action("Arbalet", "Arbalet", null)"><span class="middle">Арбалеты</span></a>
    </div>
    <div class="tabloid-item col-xl-3 col-lg-4 col-md-6 col-sm-6">
        <a class="picture" href="@Url.Action("Aksessuary_k_ruzhyam", "Aksessuary", null)">
            <img src="~/Images/acsesuari_k_ruziyam.jpg" />
        </a>
        <a class="name text-center" href="@Url.Action("Aksessuary_k_ruzhyam", "Aksessuary", null)"><span class="middle">Аксессуары к ружьям</span></a>
    </div>  
</div>


<p class="text">Делаем отправки во все города Украины:  Киев, Харьков, Днепропетровск, Черкассы, Запорожье, Винница, Кировоград, Полтава, Луганск, Ровно, Херсон, Донецк, Луцк, Симферополь, Хмельницкий, Житомир, Львов, Сумы,  Николаев, Тернополь, Чернигов, Ивано-Франковск, Одесса, Ужгород, Черновцы и другие.	</p>

@section Scripts{


    <script>
        $('.dropdown-menu > .dropdown > a').addClass('dropdown-toggle');

        $('.dropdown-menu a.dropdown-toggle').on('click', function (e) {
            if (!$(this).next().hasClass('show')) {
                $(this).parents('.dropdown-menu').first().find('.show').removeClass("show");
            }
            var $subMenu = $(this).next(".dropdown-menu");
            $subMenu.toggleClass('show');
            $(this).parents('li.nav-item.dropdown.show').on('hidden.bs.dropdown', function (e) {
                $('.dropdown-menu > .dropdown .show').removeClass("show");
            });
            return false;
        });
    </script>
}

