    Layout = "~/Views/Shared/_Product.cshtml";
    ViewBag.Title = "Ножи, Фонари, Груза";
}

<div class="bread">
    <nav class="breadcrumb">
        @Html.ActionLink("Главная", "Index", "Home", new { area = "" }, new { @class = "breadcrumb-item" })
        @Html.ActionLink("Каталог товаров", "Catalog", "Home", new { area = "" }, new { @class = "breadcrumb-item" })
        <span class="breadcrumb-item active">Ножи, Фонари, Груза</span>
    </nav>
</div>
<div class="razdel">
    <h3>Ножи, Фонари, Груза</h3>
</div>

<div class="row">
    <div class="tabloid-item col-xl-3 col-lg-4 col-md-6 col-sm-6">
        <a class="picture" href="@Url.Action("List", "Fonari", null)">
            <img src="~/Images/fonari.jpg" />
        </a>
        <a class="name text-center" href="@Url.Action("List", "Fonari", null)"><span class="middle">Фонари</span></a>
    </div>
    <div class="tabloid-item col-xl-3 col-lg-4 col-md-6 col-sm-6">
        <a class="picture" href="@Url.Action("List", "Nozhi", null)">
            <img src="~/Images/nozhi.jpg" />
        </a>
        <a class="name text-center" href="@Url.Action("List", "Nozhi", null)"><span class="middle">Ножи</span></a>
    </div>
    <div class="tabloid-item col-xl-3 col-lg-4 col-md-6 col-sm-6">
        <a class="picture" href="@Url.Action("List", "Gruza_i_gruzovye_sistemy", null)">
            <img src="~/Images/gruza_i_gruzovye_sistemy.jpg" />
        </a>
        <a class="name text-center" href="@Url.Action("List", "Gruza_i_gruzovye_sistemy", null)"><span class="middle">Груза и грузовые системы</span></a>
    </div>
    <div class="tabloid-item col-xl-3 col-lg-4 col-md-6 col-sm-6">
        <a class="picture" href="@Url.Action("Aksessuary_k_nozhi_fonari_gruza", "Aksessuary", null)">
            <img src="~/Images/aksessuary_fonari_nozgi_gruza.jpg" />
        </a>
        <a class="name text-center" href="@Url.Action("Aksessuary_k_nozhi_fonari_gruza", "Aksessuary", null)"><span class="middle">Аксессуары</span></a>
    </div>
</div>


<p class="text">Делаем отправки во все города Украины:  Киев, Харьков, Днепропетровск, Черкассы, Запорожье, Винница, Кировоград, Полтава, Луганск, Ровно, Херсон, Донецк, Луцк, Симферополь, Хмельницкий, Житомир, Львов, Сумы,  Николаев, Тернополь, Чернигов, Ивано-Франковск, Одесса, Ужгород, Черновцы и другие.	</p>

@section Scripts{


    <script>
        $('.dropdown-menu > .dropdown > a').addClass('dropdown-toggle');

        $('.dropdown-menu a.dropdown-toggle').on('click', function (e) {
            if (!$(this).next().hasClass('show')) {
                $(this).parents('.dropdown-menu').first().find('.show').removeClass("show");
            }
            var $subMenu = $(this).next(".dropdown-menu");
            $subMenu.toggleClass('show');
            $(this).parents('li.nav-item.dropdown.show').on('hidden.bs.dropdown', function (e) {
                $('.dropdown-menu > .dropdown .show').removeClass("show");
            });
            return false;
        });
    </script>
}

